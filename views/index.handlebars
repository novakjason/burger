<div id="home">
  <div class="grid-container">
    <div class="header">
      <h1 class="text-center">CRUD-A-BURGER</h1>
    </div>
    <div class="title">
      <h3 class="text-center">Menu</h3>
    </div>
    <div class="body">

      <!-- List of burgers with default devoured status set to false -->
      <div class="hotnready p-2">
        <p class="text-center m-3">Hot and ready!</p>
        <ul id="hotNReady" class="list-group">
          {{#each burgers}}
          {{#unless devoured}}
          <li data-id="{{id}}" class="list-group-item list-group-item-dark mb-2">
            <a href="burger/{{id}}">{{burgerName}}</a>
            <button class="btn btn-sm btn-danger float-right delete">ｘ</button>
            <button class="btn btn-sm btn-success float-right eat">eat</button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>

        <!-- Form to add a new burger to the database -->
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <input type="text" id="burgerName" class="form-control" aria-describedby="burgerName"
              placeholder="Create your burger!">
          </div>
          <button id="cook" class="btn float-right">Cook</button>
        </form>
      </div>

      <!-- List of burgers with devoured status set to true -->
      <div class="devoured p-2">
        <p class="text-center m-3">Already eaten!</p>
        <ul id="devoured-list" class="list-group">
          {{#each burgers}}
          {{#if devoured}}
          <li data-id="{{id}}" data-devoured="{{devoured}}" class="list-group-item list-group-item-dark mb-2">
            <a href="burger/{{id}}">{{burgerName}}</a>
            <button class="btn btn-sm btn-danger float-right delete">ｘ</button>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="footer p-3">
      <p class="text-center"><strong>Developed by: <a href="https://github.com/novakjason">Jason Novak</a></strong></p>
    </div>
  </div>
</div>

