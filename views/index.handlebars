<div id="home">

  <div class="c-grid-container">

    <div class="c-header">
      <h1 class="text-center">CRUD-A-BURGER</h1>
    </div>

    <div class="c-title">
      <h3 class="text-center">Menu</h3>
    </div>

    <div class="c-body">

      <div class="c-hotnready">
        <div class="d-inline-flex m-2">
          <button class="btn btn-success">eat me</button>
          <div class="text-center">Reese's Cup Burger</div>
        </div>

        <form class="clearfix m-2" action="POST">
          <div class="form-group d-inline-flex">
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
              placeholder="Create your burger!">
          </div>
          <button id="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

      <div class="c-devoured">
        <ul id="example-list" class="list-group">
          {{#each burgers}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="c-footer p-3">
      <p class="text-center"><strong>Developed by: Jason Novak</strong></p>
    </div>

  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/public/js/index.js"></script>