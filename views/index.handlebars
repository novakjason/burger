<div id="home">
  <div class="c-grid-container">

    <div class="c-header">
      <h1 class="text-center">{{msg}}</h1>
    </div>

    <div class="c-title">
      <h3 class="text-center">Menu</h3>
    </div>

    <div class="c-body">
      <div class="c-hotnready p-2">
        <p class="text-center m-3">Hot and ready!</p>

        <ul id="hotNReady" class="list-group">
          {{#each burger}}
          <li data-id="{{this.id}}" class="list-group-item list-group-item-dark mb-2">
            <a href="burger/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
            <button class="btn btn-success float-right eat">eat</button>
          </li>
          {{/each}}
        </ul>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <input type="text" id="burgerName" class="form-control" aria-describedby="burgerName"
              placeholder="Create your burger!">
          </div>
          <button id="cook" class="btn btn-primary float-right">Cook</button>
        </form>

      </div>

      <div class="c-devoured p-2">

        <p class="text-center m-3">Already eaten!</p>

        <ul id="devoured-list" class="list-group">
          {{#each burgers}}
          {{#if this.devoured}}
          <li data-id="{{this.id}}" data-devoured="{{this.devoured}}" class="list-group-item list-group-item-dark mb-2">
            <a href="burger/{{this.id}}">{{this.name}}</a>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>

    </div>

    <div class="c-footer p-3">
      <p class="text-center"><strong>Developed by: Jason Novak</strong></p>
    </div>

  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>